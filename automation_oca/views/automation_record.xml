<odoo>

    <record model="ir.ui.view" id="automation_record_form_view">
        <field name="model">automation.record</field>
        <field name="arch" type="xml">
            <form create="0">
                <header>
                    <!-- TODO -->
                </header>
                <sheet>
                    <!-- TODO -->

                    <div class="oe_title">
                        <h1><field
                                name="resource_ref"
                                required="1"
                                options="{'hide_model': True}"
                            /></h1>
                    </div>
                    <group>
                        <field name="configuration_id" />
                    </group>
                    <field
                        name="automation_activity_ids"
                        widget="automation_activity"
                        mode="kanban"
                        class="o_automation_kanban"
                    >
                        <kanban>
                            <field name="id" />
                            <field name="name" />
                            <field name="activity_type" />
                            <field name="parent_id" />
                            <field name="trigger_type" />
                            <field name="parent_position" />
                            <templates>
                                <div
                                    t-name="kanban-box"
                                    class="o_automation_kanban_box p-2"
                                >
                                    <div
                                        class="o_automation_kanban_extra"
                                        t-foreach="[...Array(record.parent_position.raw_value).keys()]"
                                        t-as="extra"
                                        t-key="extra"
                                    >
                                        <div
                                            class="o_automation_kanban_position_line"
                                        />
                                    </div>
                                    <div class="me-5 o_automation_kanban_time">
                                        <div
                                            class="o_automation_kanban_position_line"
                                        />
                                        <i
                                            class="o_automation_kanban_card_position fa fa-circle text-info text-right"
                                        />
                                        <div
                                            class="p-2 o_automation_kanban_time_info text-center"
                                        >
                                            <strong>
                                                <field
                                                    name="scheduled_date"
                                                    t-if="record.scheduled_date.value"
                                                />
                                                <span
                                                    t-elif="record.trigger_type.raw_value == 'mail_bounce'"
                                                    class="text-primary"
                                                >
                                                    <i
                                                        t-attf-class="fa fa-exclamation-circle"
                                                    /> Not bounced yet
                                                </span>
                                                <span
                                                    t-elif="record.trigger_type.raw_value == 'mail_open'"
                                                    class="text-primary"
                                                >
                                                        <i
                                                        t-attf-class="fa fa-envelope-open-o"
                                                    /> Not opened yet
                                                    </span>
                                                <span
                                                    t-elif="record.trigger_type.raw_value == 'mail_reply'"
                                                    class="text-primary"
                                                >
                                                    <i
                                                        t-attf-class="fa fa-reply"
                                                    /> Not replied yet
                                                </span>
                                                <span
                                                    t-elif="record.trigger_type.raw_value == 'mail_click'"
                                                    class="text-primary"
                                                >
                                                    <i
                                                        t-attf-class="fa fa-hand-pointer"
                                                    /> Not clicked yet
                                                </span>
                                            </strong>
                                        </div>
                                    </div>
                                    <div class="o_automation_kanban_card">
                                        <div class="o_automation_kanban_header">
                                            <div
                                                class="o_automation_kanban_header_icon"
                                            >
                                                <span
                                                    class="fa fa-envelope"
                                                    t-if="record.activity_type.raw_value == 'mail'"
                                                    title="Email"
                                                    role="img"
                                                    aria-label="Email"
                                                />
                                                <span
                                                    class="fa fa-cogs"
                                                    t-else=""
                                                    title="Other activity"
                                                    role="img"
                                                    aria-label="Other activity"
                                                />
                                            </div>
                                            <div
                                                class="o_automation_kanban_header_title"
                                            >
                                                <h3 class="mb0 mt0"><a
                                                        type="edit"
                                                        class="oe_kanban_action oe_kanban_action_a"
                                                        t-att-title="record.name.raw_value"
                                                    ><field name="name" /></a></h3>
                                                <div
                                                    t-esc="record.activity_type.value"
                                                />
                                            </div>
                                            <div
                                                class="o_automation_kanban_header_actions"
                                            >
                                                <button
                                                    type="object"
                                                    name="run"
                                                    class="fa fa-play"
                                                />
                                            </div>
                                        </div>
                                        <div class="o_automation_kanban_graph">
                                            <span>TO BE FILLED</span>
                                        </div>

                                        <div
                                            t-if="!read_only_mode"
                                            class="o_automation_kanban_child_add text-center"
                                        >
                                            <div
                                                class="o_automation_kanban_child_add_title card-footer"
                                            >
                                                <i
                                                    class="fa fa-plus-circle"
                                                /> Add child activity
                                            </div>
                                            <div
                                                class="o_automation_kanban_child_add_buttons"
                                            >
                                                <div
                                                    trigger-type="activity"
                                                    class="text-success o_automation_kanban_child_add_button"
                                                >
                                                    <i
                                                        class="fa fa-code-fork fa-rotate-180 fa-flip-vertical"
                                                        title="Add Another Activity"
                                                        role="img"
                                                        aria-label="Add Another Activity"
                                                    />
                                                </div>
                                                <div
                                                    t-if="record.activity_type.raw_value == 'mail'"
                                                    trigger-type="mail_open"
                                                    class="text-success o_automation_kanban_child_add_button"
                                                >
                                                    <i
                                                        class="fa fa-envelope-open-o"
                                                        title="Opened"
                                                        role="img"
                                                        aria-label="Opened"
                                                    />
                                                </div>
                                                <div
                                                    t-if="record.activity_type.raw_value == 'mail'"
                                                    trigger-type="mail_not_open"
                                                    class="text-danger o_automation_kanban_child_add_button"
                                                >
                                                    <i
                                                        class="fa fa-envelope-open-o "
                                                        title="Not Opened"
                                                        role="img"
                                                        aria-label="Not Opened"
                                                    />
                                                </div>
                                                <div
                                                    t-if="record.activity_type.raw_value == 'mail'"
                                                    trigger-type="mail_reply"
                                                    type="new_child"
                                                    class="text-success o_automation_kanban_child_add_button"
                                                >
                                                    <i
                                                        class="fa fa-reply"
                                                        title="Replied"
                                                        role="img"
                                                        aria-label="Replied"
                                                    />
                                                </div>
                                                <div
                                                    t-if="record.activity_type.raw_value == 'mail'"
                                                    trigger-type="mail_not_reply"
                                                    class="text-danger o_automation_kanban_child_add_button"
                                                >
                                                    <i
                                                        class="fa fa-reply"
                                                        title="Not Replied"
                                                        role="img"
                                                        aria-label="Not Replied"
                                                    />
                                                </div>
                                                <div
                                                    t-if="record.activity_type.raw_value == 'mail'"
                                                    trigger-type="mail_click"
                                                    class="text-success o_automation_kanban_child_add_button"
                                                >
                                                    <i
                                                        class="fa fa-hand-pointer-o"
                                                        title="Clicked"
                                                        role="img"
                                                        aria-label="Clicked"
                                                    />
                                                </div>
                                                <div
                                                    t-if="record.activity_type.raw_value == 'mail'"
                                                    trigger-type="mail_not_click"
                                                    class="text-danger o_automation_kanban_child_add_button"
                                                >
                                                    <i
                                                        class="fa fa-hand-pointer-o"
                                                        title="Not Clicked"
                                                        role="img"
                                                        aria-label="Not Clicked"
                                                    />
                                                </div>
                                                <div
                                                    t-if="record.activity_type.raw_value == 'mail'"
                                                    trigger-type="mail_bounce"
                                                    class="text-danger o_automation_kanban_child_add_button"
                                                >
                                                    <i
                                                        class="fa fa-exclamation-circle"
                                                        title="Bounced"
                                                        role="img"
                                                        aria-label="Bounced"
                                                    />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </templates>
                        </kanban>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="automation_record_search_view">
        <field name="model">automation.record</field>
        <field name="arch" type="xml">
            <search>
                <field name="configuration_id" />
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="automation_record_tree_view">
        <field name="model">automation.record</field>
        <field name="arch" type="xml">
            <tree create="0">
                <field name="name" />
                <field name="configuration_id" />
                <field name="create_date" />
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="automation_record_act_window">
        <field name="name">Automation Record</field> <!-- TODO -->
        <field name="res_model">automation.record</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record
        model="ir.actions.act_window"
        id="automation_record_configuration_act_window"
    >
        <field name="name">Automation Record</field>
        <field name="res_model">automation.record</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('configuration_id', '=', active_id)]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.ui.menu" id="automation_record_menu">
        <field name="name">Automation Record</field>
        <field name="parent_id" ref="automation_root_menu" />
        <field name="action" ref="automation_record_act_window" />
        <field name="sequence" eval="16" /> <!-- TODO -->
    </record>

</odoo>
