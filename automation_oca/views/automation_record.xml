<odoo>

    <record model="ir.ui.view" id="automation_record_form_view">
        <field name="model">automation.record</field>
        <field name="arch" type="xml">
            <form create="0">
                <header>
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <!-- TODO -->

                    <div class="oe_title">
                        <h1><field
                                name="resource_ref"
                                required="1"
                                options="{'hide_model': True}"
                            /></h1>
                    </div>
                    <group>
                        <field name="configuration_id" />
                    </group>
                    <field
                        name="automation_activity_ids"
                        widget="automation_activity"
                        mode="kanban"
                        class="o_automation_kanban"
                    >
                        <kanban>
                            <field name="id" />
                            <field name="name" />
                            <field name="activity_type" />
                            <field name="parent_id" />
                            <field name="trigger_type" />
                            <field name="parent_position" />
                            <field name="mail_status" />
                            <field name="mail_clicked_on" />
                            <field name="state" />
                            <templates>
                                <div
                                    t-name="kanban-box"
                                    class="o_automation_kanban_box p-2"
                                >
                                    <div
                                        class="o_automation_kanban_extra"
                                        t-foreach="[...Array(record.parent_position.raw_value).keys()]"
                                        t-as="extra"
                                        t-key="extra"
                                    >
                                        <div
                                            class="o_automation_kanban_position_line"
                                        />
                                    </div>
                                    <div class="me-5 o_automation_kanban_time">
                                        <div
                                            class="o_automation_kanban_position_line"
                                        />
                                        <i
                                            class="o_automation_kanban_card_position fa fa-circle text-info text-right"
                                            title="Run on"
                                        />
                                        <div
                                            class="p-2 o_automation_kanban_time_info text-center"
                                        >
                                            <strong>
                                                <field
                                                    class="text-success"
                                                    name="processed_on"
                                                    t-if="record.state.raw_value === 'done'"
                                                />
                                                <span
                                                    class="text-warning"
                                                    t-elif="record.state.raw_value == 'expired'"
                                                >
                                                    Expired <field
                                                        name="processed_on"
                                                    />
                                                </span>
                                                <span
                                                    class="text-info"
                                                    t-elif="record.state.raw_value == 'rejected'"
                                                >
                                                    Rejected <field
                                                        name="processed_on"
                                                    />
                                                </span>
                                                <span
                                                    class="text-danger"
                                                    t-elif="record.state.raw_value == 'error'"
                                                >
                                                    Error on <field
                                                        name="processed_on"
                                                    />
                                                </span>
                                                <span
                                                    class="text-warning"
                                                    t-elif="record.state.raw_value == 'cancel'"
                                                >
                                                    Cancelled <field
                                                        name="processed_on"
                                                    />
                                                </span>
                                                <field
                                                    name="scheduled_date"
                                                    t-elif="record.scheduled_date.value and record.state.raw_value === 'scheduled'"
                                                />
                                                <span
                                                    t-elif="record.trigger_type.raw_value == 'mail_bounce'"
                                                    class="text-primary"
                                                >
                                                    <i
                                                        class="fa fa-exclamation-circle"
                                                    /> Not bounced yet
                                                </span>
                                                <span
                                                    t-elif="record.trigger_type.raw_value == 'mail_open'"
                                                    class="text-primary"
                                                >
                                                        <i
                                                        class="fa fa-envelope-open-o"
                                                    /> Not opened yet
                                                    </span>
                                                <span
                                                    t-elif="record.trigger_type.raw_value == 'mail_reply'"
                                                    class="text-primary"
                                                >
                                                    <i
                                                        class="fa fa-reply"
                                                    /> Not replied yet
                                                </span>
                                                <span
                                                    t-elif="record.trigger_type.raw_value == 'mail_click'"
                                                    class="text-primary"
                                                >
                                                    <i
                                                        class="fa fa-hand-pointer-o"
                                                    /> Not clicked yet
                                                </span>
                                            </strong>
                                        </div>
                                    </div>
                                    <div class="o_automation_kanban_card">
                                        <div class="o_automation_kanban_header">
                                            <div
                                                t-attf-class="o_automation_kanban_header_icon {{record.state.raw_value === 'done' ? 'btn-success': (record.state.raw_value === 'scheduled' ? 'btn-primary': (record.state.raw_value === 'error' ? 'btn-danger': (record.state.raw_value === 'rejected' ? 'btn-info': 'btn-warning')))}}"
                                            >
                                                <span
                                                    class="fa fa-envelope"
                                                    t-if="record.activity_type.raw_value == 'mail'"
                                                    title="Email"
                                                    role="img"
                                                    aria-label="Email"
                                                />
                                                <span
                                                    class="fa fa-cogs"
                                                    t-else=""
                                                    title="Other activity"
                                                    role="img"
                                                    aria-label="Other activity"
                                                />
                                            </div>
                                            <div
                                                class="o_automation_kanban_header_title"
                                            >
                                                <h3 class="mb0 mt0"><a
                                                        type="edit"
                                                        class="oe_kanban_action oe_kanban_action_a"
                                                        t-att-title="record.name.raw_value"
                                                    ><field name="name" /></a></h3>
                                                <div
                                                    t-esc="record.activity_type.value"
                                                />
                                            </div>
                                            <div
                                                class="o_automation_kanban_header_actions"
                                            >
                                                <button
                                                    type="object"
                                                    name="run"
                                                    class="fa fa-play btn-primary o_automation_kanban_header_icon"
                                                    title="Run"
                                                    t-if="record.state.raw_value == 'scheduled'"
                                                />
                                                <button
                                                    type="object"
                                                    name="cancel"
                                                    class="fa fa-times btn-warning o_automation_kanban_header_icon"
                                                    title="Cancel"
                                                    t-if="record.state.raw_value == 'scheduled'"
                                                />
                                            </div>
                                        </div>
                                        <div
                                            class="o_automation_kanban_states"
                                            t-if="record.activity_type.raw_value == 'mail' and record.state.raw_value == 'done'"
                                        >
                                            <div
                                                t-attf-class="o_automation_kanban_state {{ record.mail_status.raw_value != 'bounced' ? 'text-success': 'text-muted' }}"
                                            ><i
                                                    class="fa fa-envelope"
                                                    title="Sent"
                                                    role="img"
                                                    aria-label="Sent"
                                                /> Sent</div>
                                            <div
                                                t-attf-class="o_automation_kanban_state {{ record.mail_status.raw_value == 'open' or record.mail_status.raw_value == 'reply' ? 'text-success' : 'text-muted' }}"
                                            ><i
                                                    class="fa fa-envelope-open-o"
                                                    title="Opened"
                                                    role="img"
                                                    aria-label="Opened"
                                                /> Opened</div>
                                            <div
                                                t-attf-class="o_automation_kanban_state {{ record.mail_clicked_on.raw_value ? 'text-success' : 'text-muted' }}"
                                            ><i
                                                    class="fa fa-hand-pointer-o"
                                                    title="Clicked"
                                                    role="img"
                                                    aria-label="Clicked"
                                                /> Clicked</div>
                                            <div
                                                t-attf-class="o_automation_kanban_state {{ record.mail_status.raw_value == 'reply' ? 'text-success' : 'text-muted' }}"
                                            ><i
                                                    class="fa fa-reply"
                                                    title="Replied"
                                                    role="img"
                                                    aria-label="Replied"
                                                /> Replied</div>
                                            <div
                                                t-attf-class="o_automation_kanban_state {{ record.mail_status.raw_value == 'bounced' ? 'text-danger' : 'text-muted' }}"
                                            ><i
                                                    class="fa fa-exclamation-circle"
                                                    title="Bounced"
                                                /> Bounced</div>
                                        </div>
                                    </div>
                                </div>
                            </templates>
                        </kanban>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="automation_record_search_view">
        <field name="model">automation.record</field>
        <field name="arch" type="xml">
            <search>
                <field name="configuration_id" />
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="automation_record_tree_view">
        <field name="model">automation.record</field>
        <field name="arch" type="xml">
            <tree create="0">
                <field name="name" />
                <field name="configuration_id" />
                <field name="create_date" />
            </tree>
        </field>
    </record>


    <record id="automation_record_graph_view" model="ir.ui.view">
        <field name="name">automation.record.graph</field>
        <field name="model">automation.record</field>
        <field name="arch" type="xml">
            <graph string="Records">
                <field name="create_date" type="row" />
            </graph>
        </field>
    </record>

    <record model="ir.actions.act_window" id="automation_record_act_window">
        <field name="name">Automation Record</field> <!-- TODO -->
        <field name="res_model">automation.record</field>
        <field name="view_mode">graph,tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record
        model="ir.actions.act_window"
        id="automation_record_configuration_act_window"
    >
        <field name="name">Records</field>
        <field name="res_model">automation.record</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('configuration_id', '=', active_id)]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.ui.menu" id="automation_record_menu">
        <field name="name">Records</field>
        <field name="parent_id" ref="automation_reporting_root_menu" />
        <field name="action" ref="automation_record_act_window" />
        <field name="sequence" eval="16" />
    </record>

</odoo>
